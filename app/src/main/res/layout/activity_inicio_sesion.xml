<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InicioSesion">

    <TextView
        android:id="@+id/inicio_sesion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="181dp"
        android:text="Inicio Sesion"
        android:textAlignment="center"
        android:textColor="#F21616"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/correo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/correo1"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo"
        android:textAlignment="center"
        android:textColor="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/contrase単a1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volver2" />

    <EditText
        android:id="@+id/contrase単a1"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/iniciar"
        app:layout_constraintStart_toStartOf="@+id/correo1"
        app:layout_constraintTop_toBottomOf="@+id/correo1" />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="134dp"
        android:backgroundTint="#F21616"
        android:text="Iniciar Sesion"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrase単a1" />

    <Button
        android:id="@+id/volver2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="290dp"
        android:backgroundTint="#F21616"
        android:text="Volver"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/correo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>