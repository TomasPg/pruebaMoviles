<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Registro">

    <TextView
        android:id="@+id/titulo_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Registro"
        android:textAlignment="center"
        android:textColor="#F21616"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="text"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/Apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volver" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo"
        android:textAlignment="center"
        android:textColor="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/contrase単a"
        app:layout_constraintStart_toStartOf="@+id/Apellido"
        app:layout_constraintTop_toBottomOf="@+id/Apellido" />

    <EditText
        android:id="@+id/Apellido"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Apellido"
        android:textAlignment="center"
        android:textColor="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/correo"
        app:layout_constraintStart_toStartOf="@+id/nombre"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#F21616"
        app:layout_constraintBottom_toTopOf="@+id/registrarse2"
        app:layout_constraintStart_toStartOf="@+id/correo"
        app:layout_constraintTop_toBottomOf="@+id/correo" />

    <Button
        android:id="@+id/registrarse2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="77dp"
        android:backgroundTint="#F21616"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrase単a" />

    <Button
        android:id="@+id/volver"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="167dp"
        android:backgroundTint="#F21616"
        android:text="Volver"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>